# Omniverse Market API Environment Configuration
# Author: Abhi
# Copy this file to .env and fill in your API credentials

# Kalshi API Configuration
# Get your API key from: https://kalshi.com/
KALSHI_API_KEY=your_kalshi_api_key_here
KALSHI_USER_ID=your_kalshi_user_id_here

# Polymarket API Configuration  
# Get your API key from: https://polymarket.com/
POLYMARKET_API_KEY=your_polymarket_api_key_here

# Application Configuration
DEBUG=true
LOG_LEVEL=INFO

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Note: If API keys are not provided, the application will run in mock mode
# with sample data for development and testing purposes.